<% model_classC = Category %>
<div class="span3">
  <div class="well sidebar-nav">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_classC.human_attribute_name(:name) %></th>
          <th><%= model_classC.human_attribute_name(:category_id) %></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.name , category_path(category)%></td>
            <td><%= category.category_id %></td>
        <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
        new_category_path,
        :class => 'btn btn-primary' %>
  </div><!--/.well -->
</div><!--/span-->

<div class="span9">
  <%= bootstrap_flash %>
  <%- model_class = Question -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:question) %></th>
        <th><%= model_class.human_attribute_name(:answer) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= link_to question.id, question_path(question) %></td>
          <td><%= question.question %></td>
          <td><%= question.answer %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_question_path(question), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                question_path(question),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
      new_question_path,
      :class => 'btn btn-primary' %>
</div>


